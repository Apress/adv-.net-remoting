<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.runtime.remoting>
    <application>
      <channels>
        <channel ref="tcp" port="1234">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
      <service>
        <wellknown type="Server.ServerImpl, Server" 
                   objectUri="MyServer.rem" 
                   mode="Singleton" />
      </service>
    </application>
  </system.runtime.remoting>
</configuration>
